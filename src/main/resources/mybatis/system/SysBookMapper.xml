<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.system.mapper.SysBookMapper">
    
    <resultMap type="SysBook" id="SysBookResult">
        <result property="bookId"    column="book_id"    />
        <result property="bookTitle"    column="book_title"    />
        <result property="bookImage"    column="book_image"    />
        <result property="bookCategory"    column="book_category"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectSysBookVo">
        select book_id, book_title, book_image, book_category, status, create_by, create_time, update_by, update_time, remark from sys_book
    </sql>

    <select id="selectSysBookList" parameterType="SysBook" resultMap="SysBookResult">
        <include refid="selectSysBookVo"/>
        <where>  
            <if test="bookTitle != null  and bookTitle != ''"> and book_title = #{bookTitle}</if>
            <if test="bookImage != null  and bookImage != ''"> and book_image = #{bookImage}</if>
            <if test="bookCategory != null  and bookCategory != ''"> and book_category = #{bookCategory}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectSysBookByBookId" parameterType="String" resultMap="SysBookResult">
        <include refid="selectSysBookVo"/>
        where book_id = #{bookId}
    </select>
        
    <insert id="insertSysBook" parameterType="SysBook">
        insert into sys_book
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bookId != null">book_id,</if>
            <if test="bookTitle != null">book_title,</if>
            <if test="bookImage != null">book_image,</if>
            <if test="bookCategory != null">book_category,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bookId != null">#{bookId},</if>
            <if test="bookTitle != null">#{bookTitle},</if>
            <if test="bookImage != null">#{bookImage},</if>
            <if test="bookCategory != null">#{bookCategory},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateSysBook" parameterType="SysBook">
        update sys_book
        <trim prefix="SET" suffixOverrides=",">
            <if test="bookTitle != null">book_title = #{bookTitle},</if>
            <if test="bookImage != null">book_image = #{bookImage},</if>
            <if test="bookCategory != null">book_category = #{bookCategory},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where book_id = #{bookId}
    </update>

    <delete id="deleteSysBookByBookId" parameterType="String">
        delete from sys_book where book_id = #{bookId}
    </delete>

    <delete id="deleteSysBookByBookIds" parameterType="String">
        delete from sys_book where book_id in 
        <foreach item="bookId" collection="array" open="(" separator="," close=")">
            #{bookId}
        </foreach>
    </delete>
</mapper>